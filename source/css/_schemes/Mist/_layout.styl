// Tags
// --------------------------------------------------
a {
  border-bottom-color: $grey-light;
}

hr {
  height: 2px;
  margin: 20px 0;
}

// Components
// --------------------------------------------------
.btn {
  border-radius: 0;
  border-width: 2px;
  padding: 0 10px;
}

.headband {
  display: none;
}

// Page - Container
// --------------------------------------------------
.main-inner {
  padding-bottom: 80px;

  +mobile() {
    width: auto;
  }
}

.content {
  padding-top: 80px;
}

// Pagination
// --------------------------------------------------
.pagination {
  margin: 120px 0 0;
  text-align: left;

  +mobile() {
    margin: 80px 10px 0;
    text-align: center;
  }
}

// Footer
// --------------------------------------------------
.footer {
  background: $greenmask;
  color: $grey-dim;
  padding: 10px 0;
}

.footer-inner {
  text-align: left;

  +mobile() {
    text-align: center;
    width: auto;
  }
}

.cdn-by {
  display: inline-block;
}

// About
// --------------------------------------------------
#about-top {
  padding-top: 0;
  overflow: hidden;
  background: #e0ebe8;
}

.masthead-wrap {
  -webkit-animation: fadeIn 0.5s ease-in-out;
  -moz-transition: fadeIn 0.5s ease-in-out;
  -o-transition: fadeIn 0.5s ease-in-out;
  transition: fadeIn 0.5s ease-in-out;
}
#about-title.work-head {
  padding-bottom: 4em;
}

.about-container {
  margin-right: auto;
  margin-left: auto;
  padding-left: 15px;
  padding-right: 15px;
}
.about-container:before,
.about-container:after {
  content: " ";
  display: table;
}
.about-container:after {
  clear: both;
}
.about-container {
  -webkit-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}
#about-title .about-container {
  position: relative;
}

.transistion {
  -webkit-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}
#about-title .cloud {
  position: absolute;
  background: url("/images/about/cloud.svg")
     top left no-repeat;
  width: 150px;
  height: 45px;
  -webkit-transition: all 1s ease-in-out;
  transition: all 1s ease-in-out;
  z-index: 980;
}
#about-title .left-cloud {
  left: -6em;
  bottom: 2em;
}
@media (min-width: 992px) {
  #about-title .left-cloud {
    left: 2em;
    bottom: 5em;
  }
}
#about-title .right-cloud {
  right: -5em;
  top: 0;
}
@media (min-width: 992px) {
  #about-title .right-cloud {
    right: 2em;
    top: 6em;
  }
}
.row {
  margin-left: -15px;
  margin-right: -15px;
}
.row:before,
.row:after {
  content: " ";
