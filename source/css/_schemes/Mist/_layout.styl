#purpose .bubble {
  background: #f3f2f1;
  width: 77px;
  height: 77px;
  -webkit-border-radius: 60px;
  -moz-border-radius: 60px;
  border-radius: 60px;
  position: absolute;
  overflow: hidden;
  top: 2.6em;
}
#purpose .bubble .bubbling-original-icons-vert {
  -webkit-animation-name: bubblinger-vert-down;
  -moz-animation-name: bubblinger-vert-down;
  animation-name: bubblinger-vert-down;
  border-radius: 60px;
  -webkit-border-radius: 60px;
  -moz-border-radius: 60px;
  width: 77px;
  height: 77px;
  -webkit-animation-duration: 20s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: cubic-bezier(1, 0, 0, 1);
  -moz-animation-duration: 20s;
  -moz-animation-iteration-count: infinite;
  -moz-animation-timing-function: cubic-bezier(1, 0, 0, 1);
  animation-duration: 20s;
  animation-iteration-count: infinite;
  animation-timing-function: cubic-bezier(1, 0, 0, 1);
  background-image: url("/images/about/purpose/original-icons-vert.png"); 
}
@media (-webkit-min-device-pixel-ratio: 1.5),
  (min--moz-device-pixel-ratio: 1.5),
  (-o-min-device-pixel-ratio: 1.5),
  (min-resolution: 1.5dppx) {
  #purpose .bubble .bubbling-original-icons-vert {
    background-image: url("/images/about/purpose/original-icons-vert@2x.png");
    background-size: 77px 231px;
  }
}
#purpose .bubble .bubbling-wechat-icons-vert {
  -webkit-animation-name: bubblinger-vert-down;
  -moz-animation-name: bubblinger-vert-down;
  animation-name: bubblinger-vert-down;
  border-radius: 60px;
  -webkit-border-radius: 60px;
  -moz-border-radius: 60px;
  width: 77px;
  height: 77px;
  -webkit-animation-duration: 20s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: cubic-bezier(1, 0, 0, 1);
  -moz-animation-duration: 20s;
  -moz-animation-iteration-count: infinite;
  -moz-animation-timing-function: cubic-bezier(1, 0, 0, 1);
  animation-duration: 20s;
  animation-iteration-count: infinite;
  animation-timing-function: cubic-bezier(1, 0, 0, 1);
  background-image: url("/images/about/purpose/wechat-icons-vert.png"); 
}
@media (-webkit-min-device-pixel-ratio: 1.5),
  (min--moz-device-pixel-ratio: 1.5),
  (-o-min-device-pixel-ratio: 1.5),
  (min-resolution: 1.5dppx) {
  #purpose .bubble .bubbling-wechat-icons-vert {
    background-image: url("/images/about/purpose/wechat-icons-vert@2x.png");
    background-size: 77px 154px;
  }
}
#purpose .bubble .bubbling-dev-icons-vert {
  -webkit-animation-name: bubblinger-vert;
  -moz-animation-name: bubblinger-vert;
  animation-name: bubblinger-vert;
  border-radius: 60px;
  -webkit-border-radius: 60px;
  -moz-border-radius: 60px;
  width: 77px;
  height: 77px;
  -webkit-animation-duration: 20s;
  -webkit-animation-delay: 1s;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: cubic-bezier(1, 0, 0, 1);
  -moz-animation-duration: 20s;
  -moz-animation-delay: 1s;
  -moz-animation-iteration-count: infinite;
