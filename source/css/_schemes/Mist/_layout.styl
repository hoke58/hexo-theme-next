@keyframes bubblinger-vert {
  0% {
    background-position: 0 0;
  }
  5% {
    background-position: 0 -77px;
  }
  35% {
    background-position: 0 -77px;
  }
  40% {
    background-position: 0 -154px;
  }
  68% {
    background-position: 0 -154px;
  }
  73% {
    background-position: 0 -231px;
  }
  100% {
    background-position: 0 -231px;
  }
}
@keyframes bubblinger-vert-down {
  0% {
    background-position: 0 0;
  }
  5% {
    background-position: 0 77px;
  }
  35% {
    background-position: 0 77px;
  }
  40% {
    background-position: 0 154px;
  }
  68% {
    background-position: 0 154px;
  }
  73% {
    background-position: 0 231px;
  }
  100% {
    background-position: 0 231px;
  }
}